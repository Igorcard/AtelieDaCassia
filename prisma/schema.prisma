generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @db.Uuid
  name      String?
  email     String
  role      String   @default("client")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
